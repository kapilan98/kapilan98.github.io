return false;
}
if(n2.value=="")
{
alert("Enter the password");
n2.focus();
return false;
}
if(n3.value=="")
{
alert("Enter the first name");
n3.focus();
return false;
}
if(n9.value=="")
{
alert("Enter the last name");
n3.focus();
return false;
}
if(n5.value=="")
{
alert("Enter the Email id");
n5.focus();
return false;
}

if(!valid)
{
alert("Select an gender");
return false;
}

if(n6.value=="")
{
alert("Enter the Address");
